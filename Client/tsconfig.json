{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Allowing JavaScript files within my project */
		//Allow JavaScript files to be included
		"allowJs": true,
		//Disable type checking for JavaScript files
		"checkJs": false
	},
	//"include": ["src"] ensures that the src folder is reachable by TypeScript
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
